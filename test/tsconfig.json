{
  "compilerOptions": {
    "outDir": "../transpiled",
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "webworker"],
    "paths": {
      "@type/*": ["../src/type/*"],
      "@route/*": ["../src/route/*"],
      "@service/*": ["../src/service/*"],
      "@config/*": ["../src/config/*"],
      "@page/*": ["../src/page/*"],
      "@src/*": ["./*"]
    }
  },
  "include": ["./*.ts", "../node_modules/@cloudflare/workers-types/index.d.ts"]
}
