{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["dom", "esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "types": [
      "@cloudflare/workers-types",
      "react",
      "react-dom",
      "@types/jest",
      "@types/service-worker-mock"
    ],
    "paths": {
      "@type/*": ["type/*"],
      "@route/*": ["route/*"],
      "@service/*": ["service/*"],
      "@config/*": ["config/*"],
      "@api/*": ["api/*"],
      "@page/*": ["page/*"],
      "@util/*": ["util/*"],
      "@style/*": ["style/*"],
      "@data/*": ["data/*"],
      "@lang/*": ["lang/*"],
      "@exception/*": ["exception/*"],
      "@interface/*": ["interface/*"],
      "@model/*": ["model/*"],
      "@view/*": ["view/*"],
      "@src/*": ["./*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/*.tsx",
    "./src/*.ts",
    "./test/*.ts",
    "./test/**/*.ts",
    "./node_modules/@cloudflare/workers-types/index.d.ts"
  ],
  "exclude": ["node_modules/", "dist/"]
}
